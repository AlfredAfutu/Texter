<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">



    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/messages_file_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Browse file"
        android:textSize="20sp"
        bootstrap:bb_type="primary"
        bootstrap:bb_roundedCorners="true"
        />

    <TextView
        android:id="@+id/file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:textSize="15sp"/>


    <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Enter phone number"
            android:inputType="phone"
            bootstrap:be_roundedCorners="true"
            android:gravity="center"
            bootstrap:be_state=""/>

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/time_taken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Enter number of minutes"
        android:inputType="phone"
        bootstrap:be_roundedCorners="true"
        android:gravity="center"
        bootstrap:be_state=""/>

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/number_of_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:hint="Number of messages to send"
        android:inputType="phone"
        bootstrap:be_roundedCorners="true"
        android:gravity="center"
        bootstrap:be_state=""/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Send Message"
        android:textSize="20sp"
        bootstrap:bb_icon_right="fa-check"
        bootstrap:bb_type="primary"
        bootstrap:bb_roundedCorners="true"
        />

</LinearLayout>
